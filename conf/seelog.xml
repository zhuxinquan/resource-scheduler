<seelog>
    <outputs formatid="http">
        <filter levels="debug,info,error,critical">
            <console />
        </filter>
        <filter levels="debug">
            <rollingfile formatid="http" type="date" filename="log/debug.log" datepattern="2006010215" maxrolls="14" />
        </filter>
        <filter levels="info">
            <rollingfile formatid="http" type="date" filename="log/info.log" datepattern="2006010215" maxrolls="14" />
        </filter>
        <filter levels="error">
            <rollingfile formatid="http" type="date" filename="log/error.log" datepattern="2006010215" maxrolls="14" />
        </filter>
        <filter levels="critical">
            <rollingfile formatid="http" type="date" filename="log/critical.log" datepattern="2006010215" maxrolls="14" />
        </filter>
    </outputs>
    <formats>
        <format id="http" format="%Level %Date(2006-01-02 15:04:05) [%File:%Func:%Line] %Msg%n"/>
    </formats>
</seelog>
